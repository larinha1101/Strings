// Lista de palavras ruins (aquelas que queremos filtrar)
const PALAVRAS_RUINS = ["pois", "algo", "cada", "durante", "poderia"];

// Lista de normalizações de palavras (tratamento de plural e gênero)
const NORMALIZACAO = {
  "aluno": "aluno",
  "aluna": "aluno",
  "alunos": "aluno",
  "alunas": "aluno",
  // Adicione mais palavras conforme necessário
};

// Função para normalizar palavras (transformar "aluno", "alunos", "aluna" em "aluno")
function normalizarPalavra(palavra) {
  return NORMALIZACAO[palavra.toLowerCase()] || palavra;
}

// Função para processar o texto (filtra as palavras ruins e normaliza as palavras)
function processaTexto(texto) {
  const palavras = texto.split(" ");  // Divide o texto em palavras

  // Filtra palavras ruins e normaliza as palavras
  const palavrasChave = palavras
    .filter(palavra => !PALAVRAS_RUINS.includes(palavra))  // Remove as palavras ruins
    .map(normalizarPalavra);  // Normaliza as palavras
  
  return palavrasChave;
}

// Função para exibir as palavras-chave processadas
function mostraPalavrasChave() {
  const texto = document.querySelector("#entrada-de-texto").value;  // Pega o texto digitado
  const campoResultado = document.querySelector("#resultado-palavrachave");  // Pega o campo de resultado

  // Processa o texto e filtra/normaliza as palavras
  const palavrasChave = processaTexto(texto);

  // Exibe as palavras-chave no campo de resultado, separadas por vírgula
  campoResultado.textContent = palavrasChave.join(", ");
}

// Evento de clique no botão para extrair as palavras
const botaoMostraPalavras = document.querySelector("#botao-palavrachave");
botaoMostraPalavras.addEventListener("click", mostraPalavrasChave);

